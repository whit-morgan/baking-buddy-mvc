<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Baking Buddy</title>
    <link rel="stylesheet" href="css/bootstrap.css">
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
    <script src="https://cdn.ckeditor.com/ckeditor5/35.0.1/classic/ckeditor.js"></script>
</head>
<body>
<!--------Navigation-------->
    <section id="navbar">
        <nav class="navbar navbar-expand-lg bg-light">
            <div class="container-fluid">
                <i class="fa fa-fw fa-clipboard-list"></i>
              <a class="navbar-brand" href="/">Baking Buddy</a>
               
              <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
              </button>
              <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0"></ul>
                  <div class="d-grid gap-2 d-md-block">
                    <a href="/logout"><button class="btn btn-primary" type="button">Logout</button></a>
                  </div>
              </div>
            </div>
          </nav>
    </section>

<!---------Saved Recipes------->
    <section>
        <div class="container border">
            <h1>Saved Recipes</h1>
            <ul>
                <% recipes.forEach( el => { %>
                    <li class="" data-id="<%=el._id%>">
                        <% if(el.recipeName != '') {%>
                        <span><%= el.recipeName %></span>

                        <a href="/fullRecipe/<%= el._id%>">
                            <span class = 'fa fa-chevron-circle-down'></span>
                        </a>  
                                          
                        <span class="del fa fa-trash-alt "></span>
                        <% } %>
                    </li>
                <% }) %>
            </ul>
          </div>
            
    </section>
<!---------------------Add new recipe------------------------->
    <!-- Button trigger modal -->
        <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal">
            Add Recipe
        </button>
        
        <!-- Modal -->
        <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <!--Add new recipe form-->
                        <form action="/recipes/createRecipe" method="POST">
                            <!--Recipe Name-->
                            <div class="form-floating mb-3">
                                <input type="text" class="form-control" id="floatingInput" placeholder="Recipe Name" name="recipeName">
                                <label for="floatingInput">Recipe Name</label>
                            </div>
                                </div>
                                <!--Category-->
                                    <div class="mb-3">
                                    <select class="form-select" aria-label="Default select example" name="category">
                                        <option selected>Category</option>
                                        <option value="cookie">Cookie</option>
                                        <option value="cake">Cake</option>
                                        <option value="cupcake">Cupcake</option>
                                        <option value="pie">Pie</option>
                                        <option value="pastry">Pastry</option>
                                        <option value="muffin">Muffin</option>
                                        <option value="bread">Bread</option>
                                    </select>
                                    </div>
                                    <!--Public or Private Recipe-->
                                    <!-- <div class="mb-3">
                                        <div class="form-check form-switch">
                                            <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckDefault" name="makePublic">
                                            <label class="form-check-label" for="flexSwitchCheckDefault">Default switch checkbox input</label>
                                          </div>
                                    </div> -->
                                    <!--Recipe Details-->
                                    <div class="mb-3">
                                        <label for="exampleFormControlTextarea1" class="form-label">Recipe Details</label>
                                        <textarea type="text" placeholder="Add your ingredients, instructions, and any notes here." name="instructions" id="instructions"></textarea>
                                    </div>
                                </div>
                                <!--Submit Recipe-->
                                <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                <button type="submit" class="btn btn-primary">Save recipe</button>
                                </div>
                        </form>
            </div>
            </div>
        </div>





    

    
  

    

    


    <script src="js/main.js"></script>
<!-- CK Editor script - replaces textarea with wyswig -->
    <script>
        ClassicEditor
                .create( document.querySelector( '#instructions' ) )
                .then( editor => {
                        console.log( editor );
                } )
                .catch( error => {
                        console.error( error );
                } );
    </script>
<!--Bootstrap and Popper Scripts-->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.5/dist/umd/popper.min.js" integrity="sha384-Xe+8cL9oJa6tN/veChSP7q+mnSPaj5Bcu9mPX5F5xIGE0DVittaqT5lorf0EI7Vk" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.min.js" integrity="sha384-ODmDIVzN+pFdexxHEHFBQH3/9/vQ9uori45z4JjnFsRydbmQbmL5t1tQ0culUzyK" crossorigin="anonymous"></script>
</body>
</html>