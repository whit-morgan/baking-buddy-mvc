<!-- Header -->
<%- include('partials/header') -%>

<!-- Public Recipes Cards -->

<div class="container card-container">
  <h1>Public Recipes</h1>
        
  <div class="dropdown" id="categoryDropdown">
    <button type="button" class="btn btn-secondary dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
      Filter by Category
    </button>
    <ul class="dropdown-menu">
    <li><a class="dropdown-item" href="/recipes">All</a></li>
    <li><a class="dropdown-item" href="/recipes/publiccategory/cookie">Cookie</a></li>
    <li><a class="dropdown-item" href="/recipes/publiccategory/muffin">Muffin</a></li>
    <li><a class="dropdown-item" href="/recipes/publiccategory/cake">Cake</a></li>
    <li><a class="dropdown-item" href="/recipes/publiccategory/cupcake">Cupcake</a></li>
    <li><a class="dropdown-item" href="/recipes/publiccategory/pie">Pie</a></li>
    <li><a class="dropdown-item" href="/recipes/publiccategory/pastry">Pastry</a></li>
    <li><a class="dropdown-item" href="/recipes/publiccategory/bread">Bread</a></li>
</ul>
  </div>

  <div class="row row-cols-1 row-cols-md-3 g-4">
    <% for(var i=0; i < publicRecipes.length; i++) {%>
    <div class="col">
      <div class="card h-100">
        
        <div class="card-body">
          <h5 class="card-title"><%= publicRecipes[i].recipeName%></h5>
          <h6 class="card-subtitle mb-2 text-muted">Added by: <%= publicRecipes[i].userName %></h6>
          <a href="/recipes/fullRecipe/<%= publicRecipes[i]._id%>" class="btn btn-outline-primary">View Recipe</a>
        </div>
      </div>
    </div>
    <% } %>
  </div>
</div>
<!-- Footer -->
<%- include('partials/footer') -%>
